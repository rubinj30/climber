<div class="path">
    <a class='path-color' href="/users"> > Climbers</a> >
    <a class='path-color' href="/users/{{user._id}}/">{{user.username}}</a> >
    <a class='path-color' href="/users/{{user._id}}/destinations"> Destinations </a> >
    <a class='path-color' href="/users/{{user._id}}/destinations/new/">Add Destination</a>
</div>

<div class='form-div'>
    <form action="/users/{{user._id}}/destinations" method="POST">
        <div>
            <div>
                <label for="name">Name: </label>
                <input type="text" name="name" required/>
            </div>


            <div>
                <label for="city">Nearest City or Town: </label>
                <input type="text" name="city" required/>
            </div>

            <div>
                <label for="state">State: </label>
                <input type="text" name="state" />
            </div>

            {{!--
            <div>
                <label for="typeOfClimbing">What type of climbing (Sport, Bouldering, Trad, Ice, Alpine): </label>
                <input type="text" name="typeOfClimbing" />
            </div> --}}
            <div>
                <label for="photo">Link to picture of the new area: </label>
                <input type="text" name="photo" value='https://pbs.twimg.com/media/C_SSNwwXcAEAL4l.jpg' required />
            </div>
            <div>
                <label for="description">Add a brief description of the area: </label>
                <input type="text" name="description" />
            </div>
            <div class='bottom-buttons'>
                <div class='bottom-button'>
                    <button class="btn waves-effect waves-light button-colors" type="submit" name="action">Submit</button>
                </div>
                <div class='bottom-button'>
                    <a class="btn waves-effect waves-light button-colors" href="/users/{{user._id}}/destinations">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>